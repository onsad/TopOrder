@using TopOrder.Entitites
@{
    ViewData["Title"] = "Orders overview";
}

@model OrderViewModel

<h3 class="text-center mb-3">The best customer</h3>

<div class="d-flex justify-content-center">
    <table class="table table-bordered table-striped w-50">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Dashboard.BestCustomer)</th>
                <th>@Html.DisplayNameFor(model => model.Dashboard.TotalAmount)</th>
                <th>@Html.DisplayNameFor(model => model.Dashboard.AverageAmount)</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(m => m.Dashboard.BestCustomer)</td>
                <td>@Html.DisplayFor(m => m.Dashboard.TotalAmount)</td>
                <td>@Html.DisplayFor(m => m.Dashboard.AverageAmount)</td>
            </tr>
        </tbody>
    </table>
</div>

<h3 class="mt-4">Orders</h3>

<form asp-action="Index" method="get" class="mb-4">
    <div class="row g-3 align-items-end">
        <div class="col-md-4">
            <label class="form-label">Customer name</label>
            <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" class="form-control" />
        </div>

        <div class="col-md-4">
            <label asp-for="SelectedOrderStatus" class="form-label">Order status</label>
            @Html.DropDownListFor(m => m.SelectedOrderStatus,
            Html.GetEnumSelectList<StatusCode>(),
                        "Select order status",
                        new { @class = "form-select" })
        </div>

        <div class="col-md-4 d-flex gap-2 mt-3">
            <input type="submit" value="Search" class="btn btn-outline-dark" />
            <a asp-action="Index" class="btn btn-secondary">Reset filters</a>
        </div>
    </div>
</form>

<div class="table-responsive text-center">
    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>Date</th>
                <th>Customer name</th>
                <th>Amount</th>
                <th>Order status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Orders)
            {
                var rowClass = "";
                if (item.Amount > 10000)
                {
                    rowClass = "table-success";
                }
                
                if (item.Status.Code == StatusCode.Canceled)
                {
                    rowClass = "table-danger";
                }
                
                <tr class="@rowClass">
                    <td>@Html.DisplayFor(_ => item.Date)</td>
                    <td>@Html.DisplayFor(_ => item.CustomerName)</td>
                    <td>@Html.DisplayFor(_ => item.Amount)</td>
                    <td>@Html.DisplayFor(_ => item.Status.Name)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
